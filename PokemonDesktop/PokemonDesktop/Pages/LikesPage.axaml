<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" MinWidth="510" MinHeight="470"
             x:Class="PokemonDesktop.Pages.LikesPage">
  <UserControl.Styles>
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
      <Setter Property="Background" Value="#202327" />
    </Style>

    <Style Selector="TextBox">
      <Setter Property="Background" Value="#3A3D41"></Setter>
      <Setter Property="Foreground" Value="#989BA0"></Setter>
      <Setter Property="Height" Value="30"></Setter>
      <Setter Property="BorderThickness" Value="0"></Setter>
    </Style>

    <Style Selector="Button">
      <Setter Property="FontFamily" Value="Roboto" />
      <Setter Property="FontWeight" Value="SemiBold" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
      <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="Button.user">
      <Setter Property="Height" Value="35" />
      <Setter Property="Width" Value="120" />
    </Style>

    <Style Selector="Button.foundMenu">
      <Setter Property="Height" Value="40" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="Background" Value="transparent" />
    </Style>

    <Style Selector="Button.page">
      <Setter Property="Height" Value="30" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="Background" Value="transparent" />
    </Style>
  </UserControl.Styles>

  <Grid Background="#23262B">

    <ScrollViewer Name="PageCourses"
                  Padding="10">

      <Grid>

        <Grid.RowDefinitions>
          <RowDefinition Height="100"></RowDefinition>
          <RowDefinition Height="*"></RowDefinition>
          <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Поисковое меню -->

        <StackPanel>

          <TextBlock Text="Likes"
                     Foreground="#FFC618"
                     FontSize="30"
                     FontWeight="ExtraBold"
                     FontFamily="Roboto"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Margin="0">
          </TextBlock>

          <Grid Margin="0,15,0,0">

            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*"></ColumnDefinition>
              <ColumnDefinition Width="1*"></ColumnDefinition>
              <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            
            <TextBox Grid.Column="0"
                     KeyUp="TextBoxFound_OnKeyUp"
                     Name="TextBoxFound"
                     Margin="10,0,0,0"
                     VerticalAlignment="Top">
            </TextBox>
            
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        Margin="25,0,0,0">
              <Image Source="/Assets/Icons/sort.png"
                     Width="20"
                     Height="20">
              </Image>
              <Button Content="Date"
                      Margin="0,0,0,0"
                      Click="ButtonOrderByDate_OnClick"
                      Name="ButtonOrderByDate"
                      Classes="foundMenu"
                      Tag="ASC">
              </Button>
            </StackPanel>


          </Grid>

        </StackPanel>

        <!-- Основной контент -->

        <TextBlock Name="TextBlockNoContent"
                   IsVisible="False"
                   Grid.Row="1"
                   Foreground="#FFFFFF"
                   Text="Оценки не найдены"
                   FontSize="30"
                   FontFamily="Roboto"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
        </TextBlock>

        <ListBox Grid.Row="1"
                 Name="ListBoxLikes"
                 Margin="0,0,0,20"
                 Background="transparent">
          <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </ListBox.ItemsPanel>
          <ListBox.ItemTemplate>

            <DataTemplate>

              <Grid>
                <Border Background="#2E333A"
                        CornerRadius="20">
                  <StackPanel Width="300"
                              Height="170"
                              Margin="16"
                              HorizontalAlignment="Left">

                    <TextBlock Text="{Binding Pokemon, StringFormat={}Покемон: {0}}"
                               Foreground="#FFFFFF"
                               Height="40"
                               TextWrapping="Wrap"
                               MaxLines="2"
                               FontWeight="ExtraBold">
                    </TextBlock>

                    <TextBlock Text="{Binding Star, StringFormat={}Оценка: {0}}"
                               Foreground="#FFFFFF"
                               Height="30"
                               FontWeight="ExtraBold">
                    </TextBlock>

                    <TextBlock Text="{Binding DataSet, StringFormat={}Дата: {0}}"
                               Foreground="#FFFFFF"
                               Height="30"
                               TextWrapping="Wrap"
                               FontWeight="ExtraBold">
                    </TextBlock>

                    <TextBlock Text="{Binding Username, StringFormat={}Пользователь: {0}}"
                               Foreground="#FFFFFF"
                               Height="30"
                               TextWrapping="Wrap"
                               MaxLines="2"
                               FontWeight="ExtraBold">
                    </TextBlock>
                  </StackPanel>
                </Border>
              </Grid>

            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>

        <!-- Стрелки навигации -->

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="40">
          <Button Name="ButtonLastPage"
                  Classes="page"
                  Click="ButtonPage_OnClick">
            <Image Source="/Assets/Icons/left-arrow.png">

            </Image>
          </Button>

          <Button Name="ButtonNextPage"
                  Classes="page"
                  Click="ButtonPage_OnClick">
            <Image Source="/Assets/Icons/right-arrow.png">

            </Image>
          </Button>
        </StackPanel>

      </Grid>

    </ScrollViewer>
  </Grid>
</UserControl>